@model IEnumerable<UniversityManagementSystem.Models.Enrollment>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="iTitle">Enrollments</h1>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6 text-start">
            @if (User.IsInRole("Administrator") || User.IsInRole("Dean"))
            {
                <a asp-action="Create" class="btn btn-outline-primary"><i class="bi bi-plus-circle"></i> Create New</a>
            }            
        </div>
        <div class="col-6 text-end">
            <p><button class="btn btn-primary" onclick="printTable()"><i class="bi bi-printer"></i> &nbspPrint</button></p>
        </div>
    </div>
</div>

<table class="table" id="enrollmentTable">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Student)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Course)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Grade)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Year)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Semester)
            </th>
            <th>
                Lecturer Mail
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            @if (item.Course.Lecturer.Mail == User.Identity.Name)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Student.FullName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Course.Name)
                    </td>
                    <td>

                        @if (item.Grade == 0)
                        {
                            <text>not set</text>
                        }
                        else if (item.Grade < 3)
                        {
                            <span style="color: red;">@Html.DisplayFor(modelItem => item.Grade)</span>
                        }
                        else
                        {
                            <span style="color:green">@Html.DisplayFor(modelItem => item.Grade)</span>
                        }
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.Semester)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Year)
                    </td>
                    <td>
                        <a href="mailto:@(item.Course.Lecturer.Mail)">@item.Course.Lecturer.FullName</a>
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                        @*<a asp-action="Delete" asp-route-id="@item.Id">Delete</a>*@
                    </td>
                </tr>
            }
            else if (item.Student.Mail == User.Identity.Name)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Student.FullName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Course.Name)
                    </td>
                    <td>

                        @if (item.Grade == 0)
                        {
                            <text>not set</text>
                        }
                        else if (item.Grade < 3)
                        {
                            <span style="color: red;">@Html.DisplayFor(modelItem => item.Grade)</span>
                        }
                        else
                        {
                            <span style="color:green">@Html.DisplayFor(modelItem => item.Grade)</span>
                        }
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.Semester)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Year)
                    </td>
                    <td>
                        <a href="mailto:@(item.Course.Lecturer.Mail)">@item.Course.Lecturer.FullName</a>
                    </td>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.Id">Details</a>
                    </td>
                </tr>
            }
            else if (User.IsInRole("Administrator") || User.IsInRole("Dean"))
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Student.FullName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Course.Name)
                    </td>
                    <td>

                        @if (item.Grade == 0)
                        {
                            <text>not set</text>
                        }
                        else if (item.Grade < 3)
                        {
                            <span style="color: red;">@Html.DisplayFor(modelItem => item.Grade)</span>
                        }
                        else
                        {
                            @Html.DisplayFor(modelItem => item.Grade)
                        }
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.Semester)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Year)
                    </td>
                    <td>
                        <a href="mailto:@(item.Course.Lecturer.Mail)">@item.Course.Lecturer.FullName</a>
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        }
    </tbody>

    <script>
        function printTable() {
            var printContents = document.getElementById("enrollmentTable").outerHTML;
            var originalContents = document.body.innerHTML;

            document.body.innerHTML = printContents;
            window.print();
            document.body.innerHTML = originalContents;
        }
    </script>
    

</table>
