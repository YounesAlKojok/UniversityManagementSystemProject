@{
    ViewData["Title"] = "Home Page";
}
<link rel="stylesheet" href="~/css/carousel.css" />

<div id="myCarousel" class="carousel slide mb-5 mt-0" data-bs-ride="carousel" data-bs-theme="light">
    <div class="carousel-indicators">
        <button type="button" data-bs-target="#myCarousel" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
        <button type="button" data-bs-target="#myCarousel" data-bs-slide-to="1" aria-label="Slide 2"></button>
        <button type="button" data-bs-target="#myCarousel" data-bs-slide-to="2" aria-label="Slide 3"></button>
    </div>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="https://www.1stformationsblog.co.uk/wp-content/uploads/2022/09/Shutterstock_1079243414.jpg" class="d-block w-100" />
            <div class="container">
                <div class="carousel-caption text-start">
                    <br /><br /><br />
                    <h1 class="text-end">Apply now</h1>                    
                    <p class="opacity-75 text-end">Take the opportunity. To register, send admin an email.</p>
                    <p class="text-end"> <a class="btn btn-lg btn-primary" asp-area="" asp-controller="Home" asp-action="Register"><b>Sign Up Today</b></a></p>
                    
                </div>
            </div>
        </div>
        <div class="carousel-item">
            <img src="https://pg.edu.pl/files/zie/styles/artykul_664x445/public/2021-11/%5Bszablon%5D%20aktualno%C5%9Bci%20nowe%20%2811%29_0.webp?itok=FnKv22zs" class="d-block w-100" />
            <div class="container">
                <div class="carousel-caption">
                    <h1>Faculties</h1>
                    <p>Find out more about Faculties.</p>
                    <p><a class="btn btn-lg btn-primary" asp-controller="Faculties" asp-action="Index">Learn more</a></p>
                </div>
            </div>
        </div>
        <div class="carousel-item">
            <img src="https://studyinlodz.com.pl/files/public//dla_mieszkanca/edukacja/Szkoly_Wyzsze/studyinlodz/WPiA.JPG" class="d-block w-100" />
            <div class="container">
                <div class="carousel-caption text-end">
                    <h1>Departments.</h1>
                    <p>find out more about</p>
                    <p><a class="btn btn-lg btn-primary" asp-controller="Departments" asp-action="Index">Departments</a></p>
                </div>
            </div>
        </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#myCarousel" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#myCarousel" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>


