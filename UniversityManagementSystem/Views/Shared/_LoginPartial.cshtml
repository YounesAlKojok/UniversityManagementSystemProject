@using Microsoft.AspNetCore.Identity

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    if (User.IsInRole("Administrator"))
    {

        <li class="nav-item">
                <a id="manage" class="nav-link text-white" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage" style="margin-right:10px">Hello @UserManager.GetUserName(User).Substring(0,5)!!</a>
        </li>
        <li class="nav-item" style="border-left:solid; border-left-color:white">
            <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                    <button id="logout" type="submit" class="nav-link btn btn-link text-white" style="margin-right:10px">Logout</button>
            </form>
            <a class="nav-link text-white" id="register" asp-area="Identity" asp-page="/Account/Register" style="margin-right:10px">Register</a>
        </li>

    }
    else
    {
        <li class="nav-item">
                <a id="manage" class="nav-link text-white" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage" style="margin-right:10px">Hello @UserManager.GetUserName(User).Split('.')[0]!!</a>
        </li>
        <li class="nav-item">
            <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                    <button id="logout" type="submit" class="nav-link btn btn-link text-white" style="margin-right:10px">Logout</button>
            </form>
        </li>
    }
}
else
{
    <li class="nav-item">
        <a class="nav-link text-white" id="login" asp-area="Identity" asp-page="/Account/Login" style="margin-right:20px">Login</a>
    </li>
}
</ul>
