                                    <a class="nav-link text-white" asp-area="" asp-controller="Appoinments" asp-action="Index">Appoinments</a>
                                </li>                                
                            }
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-controller="DepartmentsCourses" asp-action="Index">Dep Courses</a>
                            </li>
                            <li class="nav-item">
