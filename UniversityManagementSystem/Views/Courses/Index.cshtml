@model IEnumerable<UniversityManagementSystem.Models.Course>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (TempData["Success"]!=null)
{
    <h2 class="text-success">@TempData["Success"]</h2>
}
else if (TempData["Delete"] != null)
{
    <h2 class="text-danger">@TempData["Delete"]</h2>
}
else if (TempData["Edit"] != null)
{
    <h2 class="text-warning">@TempData["Edit"]</h2>    
}



<h1 class="iTitle">Courses</h1>
@if (User.IsInRole("Administrator") || User.IsInRole("Dean"))
{
    <p><a asp-action="Create" class="btn btn-outline-primary"><i class="bi bi-plus-circle"></i> Create New</a></p>
}

<table class="table table-bordered border-primary text-center table-hover">
    <thead class="table-active">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Credit)
            </th>
            <th>
                Day
            </th>
            <th>
                Time
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Lecturer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Faculty)
            </th>

            <th>Action</th>                

        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Credit)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DayOfStudy)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TimeOfStudy)
            </td>
            <td>               
                 @*<a href="mailto:@(item.Lecturer.Mail)">@item.Lecturer.FullName</a>*@

                    @if (item.Lecturer.Mail == "NotSet@ums.com")
                    {
                        @item.Lecturer.FullName
                    }
                    else
                    {
                        <a href="mailto:@(item.Lecturer.Mail)">@item.Lecturer.FullName</a>
                    }

            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Faculty.Name)
            </td>
            @if (User.IsInRole("Administrator") || User.IsInRole("Dean"))
            {

                <td>

                        <a class="btn btn-outline-warning" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i></a>
                        <a class="btn btn-outline-info" asp-action="Details" asp-route-id="@item.Id"><i class="bi bi-info-circle"></i></a>
                        <a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash3"></i></a>
                </td>
            }else
            {
                <td>

                        <a asp-action="Details" asp-route-id="@item.Id"><i class="bi bi-info-circle"></i></a>
                    </td>
            }

        </tr>
}
    </tbody>
</table>
