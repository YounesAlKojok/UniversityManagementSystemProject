@model IEnumerable<UniversityManagementSystem.Models.Lecturer>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>
@if (User.IsInRole("Administrator") || User.IsInRole("Dean"))
{
<p>
    <a asp-action="Create" style="">Create New</a>
</p>
}
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FullName)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Mail)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Faculty)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>

            <td>
                @Html.DisplayFor(modelItem => item.FullName)
            </td>
            <td>                
                <a href="mailto:@(item.Mail)">@item.Mail</a>
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Faculty.Name)
            </td>
             @if (User.IsInRole("Administrator") || User.IsInRole("Dean"))
             {
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
             }
        </tr>
    
}
    </tbody>
</table>


