@model IEnumerable<UniversityManagementSystem.Models.Dean>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="iTitle">Deans</h1>

@if (User.IsInRole("Administrator"))
{
    <p>
        <a asp-action="Create" class="btn btn-outline-primary"><i class="bi bi-plus-circle"></i> Create New</a>
    </p>
}


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FullName)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Mail)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Office)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>

    @foreach (var item in Model) 
    {
            @if (User.IsInRole("Administrator"))
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.FullName)
                    </td>
                    <td>
                        @*@Html.DisplayFor(modelItem => item.Mail)*@
                        <a href="mailto:@(item.Mail)">@item.Mail</a>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Office)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
            else if (User.IsInRole("Dean"))
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.FullName)
                    </td>
                    <td>                        
                        <a href="mailto:@(item.Mail)">@item.Mail</a>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Office)
                    </td>

                    
                    @if (item.Mail == User.Identity.Name)
                    {
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                            <a asp-action="Details" asp-route-id="@item.Id">Details</a>                             
                        </td>
                    }else
                    {
                        <td>                       
                            <a asp-action="Details" asp-route-id="@item.Id">Details</a>
                        </td>                            
                    }

                </tr>
            }
            else
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.FullName)
                    </td>
                    <td>
                        @*@Html.DisplayFor(modelItem => item.Mail)*@
                        <a href="mailto:@(item.Mail)">@item.Mail</a>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Office)
                    </td>
                </tr>
            }
    }
    </tbody>
</table>
