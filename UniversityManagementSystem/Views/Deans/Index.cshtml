@model IEnumerable<UniversityManagementSystem.Models.Dean>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (TempData["Success"] != null)
{
    <h2 class="text-success">@TempData["Success"]</h2>
}
else if (TempData["Delete"] != null)
{
    <h2 class="text-danger">@TempData["Delete"]</h2>
}
else if (TempData["Edit"] != null)
{
    <h2 class="text-warning">@TempData["Edit"]</h2>
}

<h1 class="iTitle">Deans</h1>

@if (User.IsInRole("Administrator"))
{
    <p>
        <a asp-action="Create" class="btn btn-outline-primary"><i class="bi bi-plus-circle"></i> Create New</a>
    </p>
}


<table class="table table-bordered border-primary text-center table-hover">
    <thead class="table-active">
        <tr >
            <th>
                @Html.DisplayNameFor(model => model.FullName)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Mail)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Office)
            </th>
            @if (User.IsInRole("Administrator") || User.IsInRole("Deans"))
            {
                <th>Action</th>                
            }
        </tr>
    </thead>
    <tbody>

    @foreach (var item in Model) 
    {
            @if (User.IsInRole("Administrator"))
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.FullName)
                    </td>
                    <td>
                        @*@Html.DisplayFor(modelItem => item.Mail)*@
                        <a href="mailto:@(item.Mail)">@item.Mail</a>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Office)
                    </td>
                    <td>
                        <a class="btn btn-outline-warning" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i></a>
                        <a class="btn btn-outline-info" asp-action="Details" asp-route-id="@item.Id"><i class="bi bi-info-circle"></i></a>
                        <a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash3"></i></a>
                    </td>
                </tr>
            }
            else if (User.IsInRole("Dean"))
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.FullName)
                    </td>
                    <td>                        
                        <a href="mailto:@(item.Mail)">@item.Mail</a>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Office)
                    </td>

                    
                    @if (item.Mail == User.Identity.Name)
                    {
                        <td>
                            <a class="btn btn-outline-warning" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i></a>
                            <a class="btn btn-outline-info" asp-action="Details" asp-route-id="@item.Id"><i class="bi bi-info-circle"></i></a>
                        </td>
                    }else
                    {
                        <td>
                            <a class="btn btn-outline-info" asp-action="Details" asp-route-id="@item.Id"><i class="bi bi-info-circle"></i></a>
                        </td>                            
                    }

                </tr>
            }
            else
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.FullName)
                    </td>
                    <td>
                        @*@Html.DisplayFor(modelItem => item.Mail)*@
                        <a href="mailto:@(item.Mail)">@item.Mail</a>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Office)
                    </td>
                </tr>
            }
    }
    </tbody>
</table>
